{
    "name": "tr33m4n/codeception-module-percy",
    "description": "Percy https://percy.io module for Codeception",
    "license": "MIT",
    "version": "v0.1.5",
    "authors": [
        {
            "name": "Daniel Doyle",
            "email": "tr33m4n@googlemail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "codeception/codeception": ">=2.0"
    },
    "autoload": {
        "psr-4": {
            "Codeception\\": "src/Codeception"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.9",
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.18",
        "rector/rector": "^0.8.56"
    },
    "scripts": {
        "lint": "vendor/bin/rector process && vendor/bin/php-cs-fixer fix --diff",
        "test:lint": "vendor/bin/rector process --dry-run && vendor/bin/php-cs-fixer fix --dry-run --diff",
        "test:types": "vendor/bin/phpstan analyse --no-interaction --no-progress",
        "test:unit": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
